<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="110dp"
            android:layout_height="135dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/zero"
            android:textColor="#FF0000"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="142dp"
            android:layout_height="135dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/fy"
            android:textColor="#FF0000"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="135dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/sz"
            android:textColor="#FF0000"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="144dp"
            android:layout_height="135dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/three"
            android:textSize="50sp"
            android:textColor="#FF0000"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="178dp"
            android:layout_height="135dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/fure"
            android:textColor="#FF0000"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/fif"
            android:textColor="#FF0000"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button6"
            android:layout_width="89dp"
            android:layout_height="135dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/six"
            android:textColor="#FF0000"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="122dp"
            android:layout_height="135dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/szz"
            android:textColor="#FF0000"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="66dp"
            android:layout_height="135dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/se"
            android:textColor="#FF0000"
            android:textSize="50sp" />

    </LinearLayout>

    <Button
        android:textSize="50sp"
        android:id="@+id/button12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:text="Restart"
        />

    <TextView
        android:textSize="50sp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        />
</LinearLayout>